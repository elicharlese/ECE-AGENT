{
  "name": "ece-agent-desktop",
  "version": "1.0.0",
  "description": "AGENT Desktop Application",
  "author": "AGENT Contributors",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node ../../node_modules/electron/cli.js dist/main.js",
    "dev": "tsc && node ../../node_modules/electron/cli.js dist/main.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "appId": "com.ece.agent.desktop",
    "productName": "AGENT",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "public/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "elicharlese",
        "repo": "AGENT"
      }
    ]
  },
  "dependencies": {
    "electron-updater": "^6.1.8"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "electron": "^30.5.1",
    "electron-builder": "^24.11.0",
    "typescript": "^5.0.0"
  }
}
