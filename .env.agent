# AGENT LLM System Configuration
# Copy this to .env and configure with your actual values

# LLM Provider Settings
OLLAMA_HOST=http://localhost:11434
GROQ_API_KEY=your_groq_api_key_here

# Vector Store Configuration  
VECTOR_STORE_PATH=./data/vector_store
EMBEDDER_MODEL=all-MiniLM-L6-v2

# Server Configuration
AGENT_HOST=0.0.0.0
AGENT_PORT=8000
AGENT_DEBUG=false

# Database (Optional - for advanced features)
DATABASE_URL=postgresql://user:password@localhost:5432/agent_db

# API Keys (Optional)
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# Training and Monitoring
GITHUB_TOKEN=your_github_token_here
GITHUB_REPO=elicharlese/AGENT

# Performance Settings
MAX_RETRIES=3
RETRY_DELAY=1.0
MAX_EXAMPLES=10
REASONING_TIMEOUT=30

# Security
API_KEY=your_api_key_here
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/agent.log